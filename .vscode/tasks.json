{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build game",
      "type": "shell",
      "command": "cmake --build build --parallel",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "never",
        "revealProblems": "onProblem",
        "focus": false,
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Run game",
      "type": "process",
      "command": "./astral",
      "options": { "cwd": "${workspaceFolder}/build" },
      "windows": { "command": ".\\astral.exe" },
      "dependsOn": ["Build game"],
      "dependsOrder": "sequence",
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Kill game",
      "type": "process",
      "command": "pkill",
      "args": ["astral"],
      "windows": {
        "command": "taskkill",
        "args": ["/IM", "astral.exe", "/F"]
      },
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "dedicated"
      }
    }
  ]
}